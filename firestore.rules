rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 1. Reglas para Datos de Usuario (Privado)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Reglas para Nicknames (Público/Compartido)
    match /nicknames/{nickname} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; 
    }

    // 3. Reglas para Proyectos (Colaborativo)
    match /projects/{projectId} {
      // Crear: Permitido si estás autenticado.
      // (Idealmente validar que request.resource.data.membersIds contenga request.auth.uid)
      allow create: if request.auth != null;
      
      // Leer: Solo si eres miembro actual
      allow read: if request.auth != null && request.auth.uid in resource.data.membersIds;
      
      // Actualizar: Permitir si eres miembro (actual o nuevo)
      // Esto permite que un usuario acepte invitación y se agregue a la lista
      allow update: if request.auth != null && request.auth.uid in request.resource.data.membersIds;
      
      // Borrar: Solo si eres miembro actual
      allow delete: if request.auth != null && request.auth.uid in resource.data.membersIds;
    }

    // 4. Reglas para Invitaciones
    match /invitations/{invitationId} {
      // Permitir todo a usuarios autenticados por ahora para facilitar flujo
      // (Se puede restringir más validando fromUid/toUid)
      allow read, write: if request.auth != null;
    }
  }
}
